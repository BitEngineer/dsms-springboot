  	<update id="updateStaffOrgId" parameterType="java.util.List">
    	begin  
        <foreach collection="list" item="item" index="index" separator=";" >
            update a_staff
            <set>
                org_id = #{item.orgId},
                update_user = #{item.updateUser},
                update_time = CURRENT_TIMESTAMP
            </set>
            where staff_id = #{item.staffId}
        </foreach>
        ;end;
    </update>
    
