  			<if test="lockTime != null and lockTime != ''">
  				, lock_time = str_do_date(#{lockTime, jdbcType=VARCHAR},'%Y-%m-%d %H:%i:%s')
  			</if>
  			<if test="lockTime == null">
  				, lock_time = null
  			</if>
  		</set>
  		WHERE 
  			staff_id = #{staffId}
  	</update>
  	
