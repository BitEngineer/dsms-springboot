  	<update id="updateByStaffId" parameterType="com.lonton.dsms.sys.bean.Staff">
  		UPDATE 
  			a_staff
  		<set>
  			update_time = CURRENT_TIMESTAMP
  			, update_user = #{updateUser}
  			<if test="staffName != null and staffName != ''">
