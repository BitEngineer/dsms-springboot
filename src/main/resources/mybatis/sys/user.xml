	<!-- 单表查询，根据任意条件 -->
	<select id="select" parameterType="java.util.Map" resultMap="BaseResultMap">
		SELECT
			*
	  	FROM
	  		a_staff
		<where>
			<if test="staffId != null and staffId != ''">
				staff_id = #{staffId}
			</if>
			<if test="staffCode != null and staffCode != ''">
